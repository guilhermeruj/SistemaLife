<div class="container-fluid">
  <div class="row">
    <div class="col-lg-12 d-flex align-items-stretch">
      <div class="card w-100">
        <div class="card-body p-4">

          <h5 class="card-title fw-semibold mb-4">
            Usuarios Cadastrados
          </h5>
          <div class="table-responsive ">
            <table class="table text-nowrap mb-0 align-middle">
              <thead class="text-dark fs-4">
                <tr>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Id</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Nome</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">CPF</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">RG</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Telefone</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">E-mail</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Nivel Acesso</h6>
                  </th>
                  <th class="border-bottom-0">
                    <h6 class="fw-semibold mb-0">Editar</h6>
                  </th>
                </tr>
              </thead>
              <tbody>
                {{#each users}}
                  <tr>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-0">{{this.id}}</h6>
                    </td>
                    <td class="border-bottom-0">
                      <h6 class="fw-semibold mb-1">{{this.name}}</h6>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.cpf}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <div class="d-flex align-items-center gap-2">
                        <p class="mb-0 fw-normal">{{this.rg}}</p>
                      </div>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.telefone}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.email}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <p class="mb-0 fw-normal">{{this.nivel}}</p>
                    </td>
                    <td class="border-bottom-0">
                      <a href="/editusuarios/{{this.id}}"><i
                          class="bi bi-pencil-square icones"
                        ></i></a>

                      <a href="/atualizasenha/{{this.id}}">
                        <i class="bi bi-key-fill icones"></i></a>

                      <a href="/deleteusuarios/{{this.id}}"><i
                          class="bi bi-trash icones"
                        ></i></a>
                    </td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>